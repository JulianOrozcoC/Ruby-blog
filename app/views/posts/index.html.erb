<h1> BLOG POSTS</h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Body</th>
      <th scope="col">Read More</th>
    </tr>
  </thead>
  <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to "Read More", post_path(post), :class => "btn btn-default" %></td>
      </tr>
      <% end %>
  </tbody>
</table>